{
	"compilerOptions": {
		"target": "ES2020",
		"lib": [
			"Decorators",
			"ES2022"
		],
		"jsx": "react",
		"module": "NodeNext",
		"rootDir": ".",
		"moduleResolution": "NodeNext",
		"paths": {
			"@/*": [
				"./src",
				"./src/*"
			]
		},
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"checkJs": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"exclude": [
		"dist",
		"node_modules",
		"test"
	],
}